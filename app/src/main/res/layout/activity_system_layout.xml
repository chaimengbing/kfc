<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <RelativeLayout
        android:id="@+id/linear_system"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bottom_bg">

        <Button
            android:id="@+id/system_btn_back"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:background="@drawable/btn_bg"
            android:text="返回"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_device_management"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="系统配置"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linear_system"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/system_text_manage"
                style="@style/sys_title_textview"
                android:visibility="gone"
                android:text="设备信息" />

            <LinearLayout
                android:id="@+id/liner_shop"
                style="@style/sys_layout"
                android:layout_marginTop="10dp">

                <TextView
                    style="@style/sys_tip_textview"
                    android:text="所属门店" />

                <EditText
                    android:id="@+id/system_edit_shop"
                    style="@style/sys_content_textview"
                    android:background="@null"
                    android:hint="请输入" />
            </LinearLayout>

            <LinearLayout style="@style/sys_layout">

                <TextView
                    style="@style/sys_tip_textview"
                    android:text="门店号" />

                <EditText
                    android:id="@+id/shop_num_edit"
                    style="@style/sys_content_textview"
                    android:background="@null"
                    android:hint="请输入" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/liner_devicename"
                style="@style/sys_layout"
                android:visibility="gone">

                <TextView
                    style="@style/sys_tip_textview"
                    android:text="设备名称" />

                <EditText
                    android:id="@+id/system_edit_devicename"
                    style="@style/sys_content_textview"
                    android:background="@null"
                    android:hint="请输入" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/liner_device_id"
                style="@style/sys_layout"
                android:visibility="gone">

                <TextView
                    style="@style/sys_tip_textview"
                    android:text="设备ID" />

                <EditText
                    android:id="@+id/system_edit_device_id"
                    style="@style/sys_content_textview"
                    android:background="@null"
                    android:enabled="false"
                    android:hint="设备ID" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/liner_app_id"
                style="@style/sys_layout"
                android:visibility="gone">

                <TextView
                    style="@style/sys_tip_textview"
                    android:text="APP ID" />

                <EditText
                    android:id="@+id/system_edit_app_id"
                    style="@style/sys_content_textview"
                    android:background="@null"
                    android:hint="APP ID" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/liner_gohide"
                style="@style/sys_layout"
                android:layout_marginTop="10dp"
                android:visibility="gone">

                <TextView
                    style="@style/sys_tip_textview"
                    android:text="操作栏设置" />

                <TextView
                    android:id="@+id/text_gosethide"
                    style="@style/sys_content_textview"
                    android:text="点击进入系统设置 >" />

            </LinearLayout>


            <LinearLayout style="@style/sys_layout">

                <TextView
                    style="@style/sys_tip_textview"
                    android:text="IP地址" />

                <EditText
                    android:id="@+id/ip_address_edit"
                    style="@style/sys_content_textview"
                    android:background="@null"
                    android:hint="请输入IP" />
            </LinearLayout>

            <LinearLayout style="@style/sys_layout">

                <TextView
                    style="@style/sys_tip_textview"
                    android:text="端口号" />

                <EditText
                    android:id="@+id/port_edit"
                    style="@style/sys_content_textview"
                    android:background="@null"
                    android:hint="请输入端口号"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/liner_gorge"
                style="@style/sys_layout">

                <TextView
                    style="@style/sys_tip_textview"
                    android:text="串口" />

                <Spinner
                    android:id="@+id/system_spinner"
                    style="@style/sys_content_textview"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <Button
            android:id="@+id/device_btn_save"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_bg"
            android:text="保存"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </LinearLayout>
</RelativeLayout>